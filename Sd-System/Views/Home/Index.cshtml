@{
    ViewData["Title"] = "Strona główna";
}

<div class="text-center">
    <h1 class="display-4">Witaj w systemie zgłoszeń</h1>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="mt-5">
            @if (User.IsInRole("Admin"))
            {
                <div class="admin-panel">
                    <h3 class="mb-4">Jesteś zalogowany jako administrator</h3>
                    <div class="row justify-content-center g-3">
                        <div class="col-12 col-md-6 col-lg-4">
                            <a asp-controller="Tickets" asp-action="Index"
                               class="btn btn-primary btn-lg w-100 py-3">
                                <i class="bi bi-list-task"></i>
                                Zarządzaj zgłoszeniami
                            </a>
                        </div>
                        <div class="col-12 col-md-6 col-lg-4">
                            <a asp-controller="Tickets" asp-action="Archive"
                               class="btn btn-secondary btn-lg w-100 py-3">
                                <i class="bi bi-archive"></i>
                                Archiwum zgłoszeń
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <h3>Twoje zgłoszenia</h3>
                <a asp-controller="UserTickets" asp-action="Index"
                   class="btn btn-primary btn-lg">
                    Przejdź do swoich zgłoszeń
                </a>
            }
        </div>
    }
    else
    {
        <div class="auth-box mt-5">
            <h4 class="mb-4">Zaloguj się aby rozpocząć</h4>
            <div class="d-flex gap-2 justify-content-center">
                <a href="/Identity/Account/Login"
                   class="btn btn-primary btn-lg px-4">
                    Logowanie
                </a>
                <a href="/Identity/Account/Register"
                   class="btn btn-outline-secondary btn-lg px-4">
                    Rejestracja
                </a>
            </div>
        </div>
    }
</div>