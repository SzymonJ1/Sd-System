@model ErrorViewModel
@{
    ViewData["Title"] = "Błąd";
}

<div class="container mt-5">
    <h1 class="text-danger">Wystąpił błąd</h1>
    <h3 class="mt-4">Przepraszamy, wystąpił problem podczas przetwarzania żądania.</h3>

    @if (Model.ShowRequestId)
    {
        <p class="mt-3">
            <strong>ID żądania:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <div class="mt-4">
        <a href="/" class="btn btn-primary">Powrót do strony głównej</a>
    </div>
</div>