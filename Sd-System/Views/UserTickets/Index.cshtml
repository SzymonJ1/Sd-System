@model IEnumerable<Sd_System.Models.Ticket>

@{
    ViewData["Title"] = "Moje Zgłoszenia";
}

<h1>Moje Zgłoszenia</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Utwórz zgłoszenie</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Tytuł</th>
            <th>Opis</th>
            <th>Status</th>
            <th>Priorytet</th>
            <th>Data utworzenia</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Title</td>
                <td>@ticket.Description</td>
                <td>@ticket.Status</td>
                <td>@ticket.Priority</td>
                <td>@ticket.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>