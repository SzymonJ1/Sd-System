@model IEnumerable<Sd_System.Models.Ticket>
@{
    ViewData["Title"] = "Archiwum zgłoszeń";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>Tytuł</th>
                <th>Priorytet</th>
                <th>Autor</th>
                <th>Data zamknięcia</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>
                        
                    </td>
                    <td>@item.CreatedBy?.FullName</td>
                    <td>@item.DueDate?.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Szczegóły</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>