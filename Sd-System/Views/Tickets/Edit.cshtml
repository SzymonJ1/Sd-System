@model Sd_System.Models.Ticket
@{
    ViewData["Title"] = "Edytuj zgłoszenie";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Dodaj ukryte pola dla wymaganych pól -->
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Title" />
                <input type="hidden" asp-for="Description" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="CreatedById" />

                <div class="form-group mb-3">
                    <label class="form-label">Tytuł</label>
                    <p class="form-control-static">@Model.Title</p>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Opis</label>
                    <pre class="form-control-static">@Model.Description</pre>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Status" class="form-label">Status</label>
                    <select asp-for="Status" asp-items="Html.GetEnumSelectList<TicketStatus>()"
                            class="form-select"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Priority" class="form-label">Priorytet</label>
                    <select asp-for="Priority" asp-items="Html.GetEnumSelectList<TicketPriority>()"
                            class="form-select"></select>
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>

                <div class="form-buttons">
                    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
                    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>