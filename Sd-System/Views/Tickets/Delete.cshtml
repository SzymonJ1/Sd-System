@model Sd_System.Models.Ticket
@{
    ViewData["Title"] = "Usuń zgłoszenie";
}

<h2 class="text-danger">Czy na pewno chcesz usunąć to zgłoszenie?</h2>

<div class="alert alert-danger">
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Autor:</dt>
        <dd class="col-sm-10">@Model.CreatedBy?.Email</dd>

        <dt class="col-sm-2">Data utworzenia:</dt>
        <dd class="col-sm-10">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>